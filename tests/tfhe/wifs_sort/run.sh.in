APPS_DIR=@APPS_DIR@
NAME=wifs_sort

cd `dirname $0`

rm -f a_* b_* c_*

echo "Input encryption"

# Generate keys
echo "TFHE key generation"
$APPS_DIR/tfhe-keygen

# Encrypt input "a" and "b"
./tfhe-$NAME-encrypt 5 3 1 10

echo "Homomorphic execution..."
time ./tfhe-$NAME-exec

echo "Output decryption"
./tfhe-$NAME-decrypt
